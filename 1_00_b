    print("> Welcome and have fun! \n\n\n")



    time.sleep(2)
    print("Task: \n")

    time.sleep(2)
    print("> Guess how many times 2 needs to be")

    time.sleep(1)
    print("  raised to reach, but not exceed,")
    
    time.sleep(1)
    print("  the generated number as closely as")

    time.sleep(1)
    print("  possible. \n\n\n")



    time.sleep(2)
    print("Example: \n")

    time.sleep(2)
    print("> Generated number:   15 \n")

    time.sleep(1)
