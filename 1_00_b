    time.sleep(1)
    print("  result in 16 and therefore exceed")

    time.sleep(1)
    print("  the generated number. \n\n\n")



def math():



    # iteration
    i        = 1

    # base number
    num      = 2

    # randomly generated number
    num_rand = random.randrange(1000, 1000000, 2)



    time.sleep(2)
    print("Let the (guessing) games begin! \n")

    time.sleep(2)
    print("> Generated number:  ", f"{num_rand:,} \n")



    while True:



        try:

            time.sleep(2)
            guess = int(input("> Your guess:         "))



        except ValueError:

            time.sleep(0.5)
            print("")
            print("> Invalid input.")

            time.sleep(0.5)
            print("  Only integers are accepted.")

            time.sleep(0.5)
            print("  Please try again. \n\n\n")

            continue



        else:

            print("\n\n")

            break



    time.sleep(2)
    print("Running calculations... \n")



    while (num ** i) <= num_rand:



        # exponentiation 1 (leading zero and angle bracket)
        if i == 1:

            time.sleep(0.5)
            print("> Exponentiation #", "{:02d}".format(i), ":", f" {num:,}", "^", i, " = ", f"{num ** i:,} \n", sep = "")



        # exponentiation 2-9 (leading zeroes but no angle brackets)
        elif i >= 2 and i <= 9:

            time.sleep(0.5)
            print("  Exponentiation #", "{:02d}".format(i), ":", f" {num:,}", "^", i, " = ", f"{num ** i:,} \n", sep = "")



        # exponentiation 10+ (no leading zeroes and no angle brackets)
        elif i >= 10:
              
            time.sleep(0.5)
            print("  Exponentiation #", i, ":", f" {num:,}", "^", i, " = ", f"{num ** i:,} \n", sep = "")


                
        i += 1



    i -= 1



    print("\n")



    time.sleep(2)
    print("Results: \n")

    time.sleep(1.5)
    print("> The answer is ", i, ".", sep = "")

    time.sleep(1.5)
    print("  Your guess was ", guess, ".", sep = "")



    if guess == i:

        time.sleep(1.5)
        print("  You were spot on! Well done!")



    elif guess > i:

        time.sleep(1.5)
        print("  You were off by ", guess - i, ".", sep = "")

        if guess - i <= 1:

            time.sleep(1.5)
            print("  Pretty close though!")



    elif guess < i:

        time.sleep(1.5)
        print("  You were off by ", i - guess, ".", sep = "")

        if i - guess <= 1:

            time.sleep(1.5)
            print("  Pretty close though!")



    else:

        time.sleep(0.5)
        print("")
        print("> Unexpected error.")

        time.sleep(0.5)
        print("  Please report it via a message or comment.")

        time.sleep(0.5)
        print("  Thank you! \n")



    print("\n\n")



def next():

    time.sleep(2)
    print("> What next? \n\n")



