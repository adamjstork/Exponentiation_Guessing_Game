def cmds():

    time.sleep(1)
    print("Available commands: \n")

    time.sleep(0.5)
    print("> again")

    time.sleep(0.5)
    print("  help")

    time.sleep(0.5)
    print("  about")

    time.sleep(0.5)
    print("  exit")

    print("\n")
    cmd()



def cmd():



    while True:



        time.sleep(1)
        print("")
        cmd = input("> Command:            ")
        print("")



        if cmd == "again" or cmd == "AGAIN" or cmd == "Again":

            print("\n")
            math()
            next()
            continue



        elif cmd == "help" or cmd == "HELP" or cmd == "Help":

            print("\n")
            cmds()



        elif cmd == "about" or cmd == "ABOUT" or cmd == "About":

            print("\n")
            about()
            next()
            continue



        elif cmd == "exit" or cmd == "EXIT" or cmd == "Exit":

            time.sleep(1)
            print("\n")
            print("> Preparing to exit...")

            time.sleep(1.5)
            print("  I hope you liked my program!")

            time.sleep(1.5)
            print("  Feel free to leave me feedback!")
            
            time.sleep(1.5)
            print("  Thanks! \n\n\n")

            time.sleep(2)

            exit()



        else:

            time.sleep(0.5)
            print("> Invalid command.")

            time.sleep(0.5)
            print("  Please try again. \n\n\n")

            cmds()

            continue



        print("\n\n")



intro()

time.sleep(1)
math()

next()

time.sleep(1)
print("")
cmds()



time.sleep(2)
print("\n\n\n")
