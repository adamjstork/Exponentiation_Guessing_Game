    time.sleep(1)
    print("  Exponentiation #02: 2^2 = 4 \n")

    time.sleep(1)
    print("  Exponentiation #03: 2^3 = 8 \n")

    time.sleep(2)
    print("> Correct answer:     3 \n")

    time.sleep(2)
